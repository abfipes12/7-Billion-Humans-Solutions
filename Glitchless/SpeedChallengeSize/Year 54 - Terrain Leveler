a:
step n
if c == datacube:
	mem1 = calc mem1 + c
	if n == nothing:
		pickup c
		write mem1
		if e == worker:
			listenfor hi
			mem1 = calc e + myitem
			write mem1
		endif
		tell w hi
		if w == worker:
			listenfor hi
			mem1 = set w
			write mem1
		endif
		tell e hi
		mem1 = calc myitem / 49
		b:
		write mem1
		drop
		step s
		pickup c
		jump b
	endif
endif
jump a